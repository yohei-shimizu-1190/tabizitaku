<!doctype html>
<html lang="ja">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <%= stylesheet_link_tag "application", media: "all" %>
  <title>Tabijitaku app</title>
</head>

<body>
  <%= render 'layouts/notifications' %>
  <header class="sticky-top">
    <div class="container-fluid pl-5 pr-5 border-bottom bg-light">
      <nav class="navbar navbar-expand-sm navbar-light">
        <a href="/" class="navbar-brand">旅 じ た く</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="menu" class="flex-row-reverse collapse navbar-collapse ">
          <ul class="navbar-nav">
            <li class="nav-item"><a href="/spots" class="nav-link pr-3">一覧を見る</a></li>
            <li class="nav-item"><a href="/spots/jmap" class="nav-link pr-3">場所を覚える</a></li>
            <li class="nav-item"><a href="/spots/quiz" class="nav-link pr-3">クイズで学ぶ</a></li>
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-danger' %> </li>
            <% else %>
              <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-primary' %> </li>
              <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-primary' %> </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </header>


    <%= yield %>

  <footer class="text-center text-muted py-4 border-top mt-auto bg-light">
    引用文 :「5分でおさらい！日本にある23の世界遺産総まとめ」https://tg.tripadvisor.jp/news/advice/world-heritage_japan_all20/
  </footer>
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

</html>