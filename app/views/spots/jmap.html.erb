  <h2> Google Map 〜<%= @spot.address%>〜</h2>
  <p class="text-warning">localhost でアクセス可能にしてあるためデプロイ時注意。詳細はBMのデプロイ時注意とあるページへ</p>
  <div id="map"></div>
</div>

<style>
#map{
  height: 500px;
}
</style>

<script>
function initMap(latlng) {
  var map = new google.maps.Map(document.getElementById('map'), {
    center: latlng,
    zoom: 4
  });

  var marker = new google.maps.Marker({
    position: latlng,
    map: map
  });
}

function getLatLng() {
  var geocoder = new google.maps.Geocoder();

  geocoder.geocode({
    address: "<%= @spot.address %>"
  }, function(results, status) {
    if (status == google.maps.GeocoderStatus.OK) {
      for (var i in results) {
        if (results[i].geometry) {
          var latlng = results[i].geometry.location;
          initMap(latlng)
        }
      }
    }
  });
}
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBsbAlSkry5YQYYQFHOYpLCtzjvQeqqqUw&callback=getLatLng"
async defer></script>